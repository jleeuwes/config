!moeite waard: http://www.haskell.org/haskellwiki/Xmonad/Frequently_asked_questions (compositing)

!URxvt settings
URxvt.urlLauncher: firefox
URxvt.matcher.button: 1
URxvt.perl-ext-common: matcher
!URxvt.perl-lib: /opt/local/lib/urxvt/perl/

! Helaas is size=10 de enige waarde waarbij het font niet horizontaal uitgerekt lijkt.
! Nadeel is dat het font
!  - stom gaat doen bij andere resoluties (als in: even groot probeert te blijven)
!  - alleen op deze grootte kan (duh)
! Ander font zoeken?
URxvt*font:        xft:Monospace:size=10
!URxvt*boldFont:    xft:Monospace:size=10:weight=bold
!URxvt*italicFont: xft:segoe ui:pixelsize=9
!URxvt*bolditalicFont: xft:Bitstream Vera Sans Mono:pixelsize=9
URxvt*scrollBar:  false
!URxvt*internalBorder: 6

!Tango-kleurenschema (oranje doet raar :()
URxvt.color0: black
URxvt.color1: #cc0000
URxvt.color2: #4e9a06
URxvt.color3: #c4a000
URxvt.color4: #3465a4
URxvt.color5: #75507b
URxvt.color6: #06989a
!URxvt.color6: #06209a
URxvt.color7: #d3d7cf
URxvt.color8: #555753
URxvt.color9: #ef2929
