Config { font = "-*-terminus-medium-*-*-*-13-*-*-*-*-*-*-*"
       , bgColor = "black"
       , fgColor = "white"
       , position = Bottom
       , commands = [ Run Cpu ["-L","10","-H","50","--low","#00a000", "--normal","#a0a000","--high","#a00000"] 10
                    , Run Memory ["-t","Mem: <usedratio>%"] 10
                    , Run Swap [] 10
                    , Run StdinReader
                    , Run Battery ["-L","10","-H","50","--low","#f00000", "--normal","#f0a000","--high","#00f000"] 10
    		            , Run Com "date" ["+\"%a %e %B %Y %H:%M:%S\""] "date" 10
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%StdinReader% } { %battery% | %date%"
       }
